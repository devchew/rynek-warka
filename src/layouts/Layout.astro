---
import "../styles/global.css";
import ScrollToTop from "../components/ScrollToTop";

interface Props {
	title?: string;
	description?: string;
}

const {
	title = "Rynek Kawiarnia Galeria | Warka",
	description = "Kawiarnia i galeria rękodzieła w centrum Warki. Aromatyczna kawa, pyszne desery i lokalne rękodzieło.",
} = Astro.props;
---

<html lang="pl">  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/png" href="/icon.png" />
    <meta name="viewport" content="width=device-width" />
    <meta name="description" content={description} />
    <meta name="generator" content={Astro.generator} />
    <meta name="theme-color" content="#d97706" />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:type" content="website" />
    <meta property="og:image" content="logo.png" />
    <meta property="og:url" content="https://rynek-warka.pl/" />
    <meta name="twitter:card" content="summary_large_image" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Playfair+Display:wght@400;500;600;700&family=Poppins:wght@300;400;500;600&display=swap" rel="stylesheet">
    <title>{title}</title>
  </head>  <body class="min-h-screen bg-stone-50 font-sans text-stone-800">
    <slot />
    <ScrollToTop client:load />
    <footer class="bg-stone-800 text-stone-200 py-6 mt-16">
      <div class="container mx-auto px-4">
        <div class="flex flex-col md:flex-row justify-between items-center gap-4">          <p>© {new Date().getFullYear()} Rynek Kawiarnia Galeria - Warka</p>          <div class="flex gap-4">
            <a href="https://www.facebook.com/rynek.warka/" target="_blank" rel="noopener noreferrer" class="hover:text-amber-400 transition-colors flex items-center">
