<Layout title="Menu Kawiarni | Rynek Kawiarnia Galeria | Warka">
  <Header />
  <main>
    <section class="py-16 md:py-24 bg-[url('/img/menu-header.jpg')] bg-cover bg-center text-white relative">
      <div class="absolute inset-0 bg-black bg-opacity-60"></div>
      <div class="container mx-auto px-4 relative z-10">
        <div class="max-w-3xl mx-auto text-center">
          <h1 class="font-serif text-4xl md:text-5xl lg:text-6xl font-bold mb-6">
            Menu Kawiarni
          </h1>
          <div class="w-24 h-1 bg-amber-800 mx-auto mb-8"></div>
          <p class="text-lg md:text-xl">
            Odkryj nasze wyjątkowe kawy, desery i przekąski
          </p>
        </div>
      </div>    </section>

    <section class="py-16 bg-white">
      <div class="container mx-auto px-4">
        <MenuItemHighlight client:visible items={[
          { name: "Warecka szarlotka na ciepło z lodami", price: "18 zł" },
          { name: "Frappe 'kawa mrożona z lodami'", price: "17 zł" },
          { name: "Piwo rzemieślnicze 'Browarka'", price: "16 zł" }
        ]} />
        
        <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
          {menuCategories.map((category) => (
            <div class="bg-white rounded-lg shadow-md p-6 hover:shadow-lg transition-shadow">
              <h3 class="font-serif text-xl font-bold text-amber-800 mb-6 text-center border-b border-stone-100 pb-2">
                {category.title}
              </h3>
              <ul class="space-y-3">
                {category.items.map((item) => (
                  <li class="flex justify-between pb-2 border-b border-stone-100 last:border-0">
                    <span class="text-stone-700">{item.name}</span>
                    <span class="font-medium">{item.price}</span>
                  </li>
                ))}
              </ul>
            </div>
          ))}
        </div>
      </div>
    </section>
  </main>
</Layout>
