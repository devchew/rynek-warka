---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';

const galleryItems = [
  {
    image: "/img/gallery-1.jpg",
    title: "Rękodzieło lokalne",
    description: "Unikalne wyroby lokalnych rzemieślników"
  },
  {
    image: "/img/gallery-2.jpg",
    title: "Wyroby ceramiczne", 
    description: "Ręcznie wykonana ceramika użytkowa i dekoracyjna"
  },
  {
    image: "/img/gallery-3.jpg",
    title: "Biżuteria artystyczna",
    description: "Wyjątkowa biżuteria wykonana przez lokalnych artystów"
  },
  {
    image: "/img/gallery-4.jpg",
    title: "Sztuka użytkowa",
    description: "Przedmioty codziennego użytku z artystycznym akcentem"
  },
  {
    image: "/img/gallery-5.jpg",
    title: "Dekoracje wnętrz",
    description: "Stylowe dodatki do wystroju domu"
  },
  {
    image: "/img/gallery-6.jpg",
    title: "Obrazy i grafiki",
    description: "Dzieła lokalnych malarzy i grafików"
  },
  {
    image: "/img/gallery-7.jpg",
    title: "Przedmioty z drewna",
    description: "Ręcznie rzeźbione i toczone wyroby z drewna"
  },
  {
    image: "/img/gallery-8.jpg",
    title: "Produkty regionalne",
    description: "Wyroby charakterystyczne dla regionu wareckiego"
  }
];

const galleryCategories = ["Wszystko", "Ceramika", "Biżuteria", "Dekoracje", "Obrazy", "Rękodzieło"];
---

<Layout title="Galeria | Rynek Kawiarnia Galeria | Warka">
  <Header />
  <main>
    <section class="py-16 md:py-24 bg-[url('/img/gallery-header.jpg')] bg-cover bg-center text-white relative">
      <div class="absolute inset-0 bg-black bg-opacity-60"></div>
      <div class="container mx-auto px-4 relative z-10">
        <div class="max-w-3xl mx-auto text-center">
          <h1 class="font-serif text-4xl md:text-5xl lg:text-6xl font-bold mb-6">
            Sztuka Galerii
          </h1>
          <div class="w-24 h-1 bg-amber-500 mx-auto mb-8"></div>
          <p class="text-lg md:text-xl">
            Odkryj unikalne lokalne rękodzieło i sztukę
          </p>
        </div>
      </div>
    </section>

    <section class="py-16 bg-white">
      <div class="container mx-auto px-4">
        <div class="flex justify-center mb-12 overflow-x-auto py-2">
          <div class="flex gap-2 md:gap-4">
            {galleryCategories.map((category, index) => (
              <button class={`px-4 py-2 rounded-full text-sm md:text-base transition-colors ${index === 0 ? 'bg-amber-600 text-white' : 'bg-stone-100 text-stone-700 hover:bg-stone-200'}`}>
                {category}
              </button>
            ))}
          </div>
        </div>

        <div class="grid sm:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-6">
          {galleryItems.map((item) => (
            <div class="group rounded-lg overflow-hidden shadow-md hover:shadow-xl transition-shadow">
              <div class="relative aspect-square overflow-hidden">
                <img 
                  src={item.image} 
                  alt={item.title}
                  class="w-full h-full object-cover group-hover:scale-110 transition-transform duration-500"
                />
              </div>
              <div class="p-4 bg-white">
                <h3 class="font-serif text-lg font-semibold text-stone-800 mb-2">{item.title}</h3>
                <p class="text-stone-600 text-sm">{item.description}</p>
              </div>
            </div>
          ))}
        </div>
      </div>
    </section>
  </main>
</Layout>
