---
import SimpleGallery from "./SimpleGallery.astro";
---

<section class="py-16 bg-stone-50">
  <div class="container mx-auto px-4">
    <div class="text-center mb-12">
      <h2 class="font-serif text-3xl md:text-4xl font-bold text-stone-800 mb-4">
        Galeria
      </h2>
      <div class="w-24 h-1 bg-amber-800 mx-auto mb-6"></div>
      <p class="text-stone-600 max-w-3xl mx-auto">
        Odkryj wyjątkowe dzieła sztuki i rękodzieła w naszej galerii
      </p>
    </div>

    <SimpleGallery limit={4} showSeeMore={true} />
    
  </div>
</section>
