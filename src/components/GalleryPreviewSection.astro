---
import { Image } from 'astro:assets';

const galleryItems = [
  {
    image: "/img/gallery-1.jpg",
    title: "Rękodzieło lokalne",
    category: "Rękodzieło"
  },
  {
    image: "/img/gallery-2.jpg",
    title: "Wyroby ceramiczne",
    category: "Ceramika"
  },
  {
    image: "/img/gallery-3.jpg",
    title: "Biżuteria artystyczna",
    category: "Biżuteria"
  },
  {
    image: "/img/gallery-4.jpg",
    title: "Sztuka użytkowa",
    category: "Dekoracje"
  }
];
---

<section class="py-16 bg-stone-50">
  <div class="container mx-auto px-4">
    <div class="text-center mb-12">
      <h2 class="font-serif text-3xl md:text-4xl font-bold text-stone-800 mb-4">Sztuka Galerii</h2>
      <div class="w-24 h-1 bg-amber-500 mx-auto mb-6"></div>
      <p class="text-stone-600 max-w-3xl mx-auto">
        Odkryj wyjątkowe dzieła lokalnych artystów i rękodzielników. Nasza galeria 
        prezentuje unikalne wyroby rzemieślnicze, obrazy i przedmioty użytkowe.
      </p>
    </div>
    
    <div class="grid sm:grid-cols-2 lg:grid-cols-4 gap-6">
      {galleryItems.map((item, index) => (
        <div class="group relative overflow-hidden rounded-lg shadow-md hover:shadow-xl transition-all duration-500 aspect-square" style={{transitionDelay: `${index * 100}ms`}}>
          <img 
            src={item.image} 
            alt={item.title}
            class="w-full h-full object-cover transition-transform duration-700 group-hover:scale-110"
          />
          <div class="absolute inset-0 bg-gradient-to-t from-black/80 via-black/30 to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-300 flex flex-col justify-end p-4">
            <span class="bg-amber-600 text-white text-xs px-2 py-1 rounded inline-block mb-2 w-fit">{item.category}</span>
            <h3 class="text-white font-medium text-lg">{item.title}</h3>
          </div>
        </div>
      ))}
    </div>
    
    <div class="mt-10 text-center">
      <a 
        href="/galeria" 
        class="inline-flex items-center gap-2 px-6 py-3 bg-amber-600 text-white rounded-md hover:bg-amber-700 transition-all duration-300 font-medium group hover:-translate-y-0.5 hover:shadow-lg"
      >
        <span>Zobacz więcej</span>
        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 transition-transform group-hover:translate-x-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 5l7 7m0 0l-7 7m7-7H3" />
        </svg>
      </a>
    </div>
  </div>
</section>
