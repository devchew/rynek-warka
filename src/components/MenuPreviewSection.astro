---
import menuData from "../../public/data/menu.json";

// Take just first 3 categories for the preview section and add icon information
const menuCategories = [
	menuData.categories[0],
	menuData.categories[1],
	menuData.categories[2]
];

---

<section class="py-16 bg-fixed bg-center">
  <div class="container mx-auto px-4">
    <div class="text-center mb-12">
      <h2 class="font-serif text-3xl md:text-4xl font-bold text-stone-800 mb-4">Menu Kawiarni</h2>
      <div class="w-24 h-1 bg-amber-800 mx-auto mb-6"></div>
      <p class="text-stone-600 max-w-3xl mx-auto">
        Odkryj naszą wyjątkową ofertę kaw, herbat i deserów. Menu pełne jest smaków, które zadowolą każde podniebienie.
      </p>
    </div>
    
    <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
      {menuCategories.map((category, index) => (
        <div 
          class="bg-white rounded-lg shadow-md overflow-hidden hover:shadow-xl transition-all duration-500 hover:-translate-y-1"
          style={{transitionDelay: `${index * 100}ms`}}
        >
          <div class="bg-orange-200 px-6 py-4 flex items-center justify-between">
            <h3 class="font-serif text-xl font-bold text-amber-800">{category.title}</h3>
          </div>
          
          <div class="p-6">
            <ul class="space-y-3">
              {category.items.map(item => (
                <li class="flex justify-between pb-2 border-b border-stone-100 last:border-0">
                  <span class="text-stone-700">{item.name}</span>
                  <span class="font-medium text-amber-700">{item.price}</span>
                </li>
              ))}
            </ul>
          </div>
          
          {category.title === "Oferta Specjalna" && (
            <div class="px-6 pb-6 text-center">
              <a 
                href="/kawiarnia" 
                class="inline-flex items-center gap-1 text-amber-700 hover:text-amber-900 font-medium transition-colors group"
              >
                <span>Zobacz pełne menu</span>
                <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 transition-transform group-hover:translate-x-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 5l7 7m0 0l-7 7m7-7H3" />
                </svg>
              </a>
            </div>
          )}
        </div>
      ))}
    </div>
    
    <div class="mt-12 text-center">
      <a 
        href="/kawiarnia" 
        class="inline-flex items-center gap-2 px-6 py-3 bg-amber-800 text-white rounded-md hover:bg-amber-700 transition-all duration-300 font-medium group hover:-translate-y-0.5 hover:shadow-lg"
      >
        <span>Zobacz pełne menu</span>
        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 transition-transform group-hover:translate-x-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 5l7 7m0 0l-7 7m7-7H3" />
        </svg>
      </a>
    </div>
  </div>
</section>
